FROM node:18-alpine

WORKDIR /app

ARG VITE_API_URL
ARG VITE_API_URL_SOCKET
ARG VITE_API_HOST

ENV VITE_API_URL=$VITE_API_URL
ENV VITE_API_URL_SOCKET=$VITE_API_URL_SOCKET
ENV VITE_API_HOST=$VITE_API_HOST

COPY package*.json ./

RUN npm cache clean --force
RUN npm install

COPY . .

EXPOSE 5173

CMD ["npm", "run", "dev"]
